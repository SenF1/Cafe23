<div class="row">
  <div class="col s7 offset-s2">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Employee Payroll</span>
        <br>
        <%= form_tag employee_payroll_path, method: :get do %>
            <div class="row">
                <div class="new-form-inputs form-infield">
                    <%= label_tag :employee_id %>
                    <%= select_tag :employee_id, options_from_collection_for_select(Employee.alphabetical.active.to_a, :id, :name, params[:employee_id]), include_blank: true %>
                </div>
                <div class="new-form-inputs form-infield">
                    <%= label_tag :start_date %>
                    <%= date_field_tag :start_date %>
                </div>
                <div class="new-form-inputs form-infield">
                    <%= label_tag :end_date %>
                    <%= date_field_tag :end_date %>
                </div>
            </div>
            <div class="row">
                <div class="col s6 offset-s3 center-align"> 
                <%= submit_tag "Generate Report", class: "btn" %>
                </div>
                <div class="col s3 right-align">
                <%= link_to 'Cancel', :back, class: 'btn btn-alert' %>
                </div>
            </div>
        <% end %>
        </div>
    </div>
  </div>
</div>